@using BlazorServer2.Data;
@using BlazorServer2.Models;
@using BlazorServer2.Models.DTOs;
@using Microsoft.AspNetCore.Identity.UI.Services;
@inject ApplicationDbContext _context

<div class="row w-100" style="margin-left:0px;margin-right:0px;">
    @* for spacing *@
    <div class="col-md-1" />

    <div class="col-md-10">
        <div class="blog-post">
            <div class="row w-100 border-bottom">
                <div class="col-sm-12 w-100 p-2">
                    <small>
                        Author: @BlogPostDemo.PostAuthor Written: @BlogPostDemo.DateCreated.ToShortDateString()
                    </small>
                </div>
            </div>
            <div class="row w-100 border-bottom">
                <div class="txt w-100">
                    <h2>@BlogPostDemo.PostTitle</h2>
                    <p>
                        @((MarkupString)BlogPostDemo.PostHtmlContent)
                    </p>
                </div>
            </div>
            <div class="d-flex flex-column-reverse justify-content-center w-100">
                @* email share *@
                <div class="w-100">
                    <SharePostEmail HtmlContent="@BlogPostDemo.PostHtmlContent"
                                    HeaderSubject="@BlogPostDemo.PostTitle" />
                </div>
                @* comment display *@
                <div class="w-100">
                    <CommentsDisplay BlogPostBeingAdded="@BlogPostDemo" />
                </div>
            </div>
        </div>
    </div>

    @* for spacing *@
    <div class="col-md-1" />
</div>

<div class="spacer" />

@code {
    [Parameter]
    public BlogPost BlogPostDemo { get; set; } = default!;
}
